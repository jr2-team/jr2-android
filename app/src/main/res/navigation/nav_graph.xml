<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragmentHome">

    <fragment
        android:id="@+id/fragmentHome"
        android:name="io.github.jr2team.jr2android.presentation.home._view.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/fragmentVocab"
        android:name="io.github.jr2team.jr2android.presentation.vocabulary._view.VocabFragment"
        android:label="VocabFragment"
        tools:layout="@layout/fragment_vocab">
        <action
            android:id="@+id/action_vocab_to_kanaList"
            app:destination="@id/kanaListFragment" />
        <action
            android:id="@+id/action_vocab_to_kanjiGroup"
            app:destination="@id/kanjiGroupFragment" />
        <action
            android:id="@+id/action_vocab_to_wordGroup"
            app:destination="@id/wordGroupListFragment" />
    </fragment>
    <fragment
        android:id="@+id/fragmentGamma"
        android:name="io.github.jr2team.jr2android.presentation.gramma._view.GrammaFragment"
        android:label="GrammaFragment"
        tools:layout="@layout/fragment_gramma" />
    <fragment
        android:id="@+id/fragmentProfile"
        android:name="io.github.jr2team.jr2android.presentation.profile._view.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/wordListFragment"
        android:name="io.github.jr2team.jr2android.presentation.vocabulary.word.list._view.WordListFragment"
        android:label="WordListFragment">
        <action
            android:id="@+id/action_wordList_to_wordDetail"
            app:destination="@id/wordDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <argument
            android:name="wordGroupId"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/kanaListFragment"
        android:name="io.github.jr2team.jr2android.presentation.vocabulary.kana.list._view.KanaListFragment"
        android:label="KanaListFragment">
        <action
            android:id="@+id/action_kanaList_to_kanaDetail"
            app:destination="@id/kanaDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/wordDetailFragment"
        android:name="io.github.jr2team.jr2android.presentation.vocabulary.word.detail._view.WordDetailFragment"
        android:label="WordDetailFragment">
        <argument
            android:name="wordId"
            android:defaultValue="0"
            app:argType="integer" />
        <action
            android:id="@+id/action_wordDetailFragment_self"
            app:destination="@id/wordDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_wordDetailFragment_to_kanjiDetailFragment"
            app:destination="@id/kanjiDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/kanaDetailFragment"
        android:name="io.github.jr2team.jr2android.presentation.vocabulary.kana.detail._view.KanaDetailFragment"
        android:label="KanaDetailFragment" />
    <fragment
        android:id="@+id/wordGroupListFragment"
        android:name="io.github.jr2team.jr2android.presentation.vocabulary.word.group._view.WordGroupFragment"
        android:label="WordGroupListFragment">
        <action
            android:id="@+id/action_wordGroup_to_wordList"
            app:destination="@id/wordListFragment" />
    </fragment>
    <fragment
        android:id="@+id/kanjiDetailFragment"
        android:name="io.github.jr2team.jr2android.presentation.vocabulary.kanji.detail._view.KanjiDetailFragment"
        android:label="KanjiDetailFragment" >
        <action
            android:id="@+id/action_kanjiDetailFragment_self"
            app:destination="@id/kanjiDetailFragment" />
        <action
            android:id="@+id/action_kanjiDetailFragment_to_wordDetailFragment"
            app:destination="@id/wordDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/kanjiGroupFragment"
        android:name="io.github.jr2team.jr2android.presentation.vocabulary.kanji.group._view.KanjiGroupFragment"
        android:label="KanjiGroupFragment">
        <action
            android:id="@+id/action_kanjiGroup_to_kanjiList"
            app:destination="@id/kanjiListFragment" />
    </fragment>
    <fragment
        android:id="@+id/kanjiListFragment"
        android:name="io.github.jr2team.jr2android.presentation.vocabulary.kanji.list._view.KanjiListFragment"
        android:label="KanjiListFragment">
        <action
            android:id="@+id/action_kanjiList_to_kanjiDetail"
            app:destination="@id/kanjiDetailFragment" />
    </fragment>
</navigation>