<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragmentHome">

    <fragment
        android:id="@+id/fragmentHome"
        android:name="ru.jjba.jr2.presentation.ui.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_fragmentHome_to_navigation"
            app:destination="@id/navGraphNumberPractice" />
    </fragment>
    <fragment
        android:id="@+id/fragmentVocab"
        android:name="ru.jjba.jr2.presentation.ui.vocab.VocabFragment"
        android:label="VocabFragment"
        tools:layout="@layout/fragment_vocab">
        <action
            android:id="@+id/action_vocab_to_kanaList"
            app:destination="@id/kanaListFragment" />
        <action
            android:id="@+id/action_vocab_to_kanjiGroup"
            app:destination="@id/kanjiGroupFragment" />
        <action
            android:id="@+id/action_vocab_to_wordGroup"
            app:destination="@id/wordGroupListFragment" />
    </fragment>
    <fragment
        android:id="@+id/fragmentGamma"
        android:name="ru.jjba.jr2.presentation.ui.gramma.GrammaFragment"
        android:label="GrammaFragment"
        tools:layout="@layout/fragment_gramma" />
    <fragment
        android:id="@+id/fragmentProfile"
        android:name="ru.jjba.jr2.presentation.ui.profile.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/wordListFragment"
        android:name="ru.jjba.jr2.presentation.ui.vocab.word.list.WordListFragment"
        android:label="WordListFragment">
        <action
            android:id="@+id/action_wordList_to_wordDetail"
            app:destination="@id/wordDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <argument
            android:name="wordGroupId"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/kanaListFragment"
        android:name="ru.jjba.jr2.presentation.ui.vocab.kana.list.KanaListFragment"
        android:label="KanaListFragment">
        <action
            android:id="@+id/action_kanaList_to_kanaDetail"
            app:destination="@id/kanaDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/wordDetailFragment"
        android:name="ru.jjba.jr2.presentation.ui.vocab.word.detail.WordDetailFragment"
        android:label="WordDetailFragment">
        <argument
            android:name="wordId"
            android:defaultValue="0"
            app:argType="integer" />
        <action
            android:id="@+id/action_wordDetailFragment_self"
            app:destination="@id/wordDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_wordDetailFragment_to_kanjiDetailFragment"
            app:destination="@id/kanjiDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/kanaDetailFragment"
        android:name="ru.jjba.jr2.presentation.ui.vocab.kana.detail.KanaDetailFragment"
        android:label="KanaDetailFragment" />
    <fragment
        android:id="@+id/wordGroupListFragment"
        android:name="ru.jjba.jr2.presentation.ui.vocab.word.group.WordGroupFragment"
        android:label="WordGroupListFragment">
        <action
            android:id="@+id/action_wordGroup_to_wordList"
            app:destination="@id/wordListFragment" />
    </fragment>
    <fragment
        android:id="@+id/kanjiDetailFragment"
        android:name="ru.jjba.jr2.presentation.ui.vocab.kanji.detail.KanjiDetailFragment"
        android:label="KanjiDetailFragment" >
        <action
            android:id="@+id/action_kanjiDetailFragment_self"
            app:destination="@id/kanjiDetailFragment" />
        <action
            android:id="@+id/action_kanjiDetailFragment_to_wordDetailFragment"
            app:destination="@id/wordDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/kanjiGroupFragment"
        android:name="ru.jjba.jr2.presentation.ui.vocab.kanji.group.KanjiGroupFragment"
        android:label="KanjiGroupFragment">
        <action
            android:id="@+id/action_kanjiGroup_to_kanjiList"
            app:destination="@id/kanjiListFragment" />
    </fragment>
    <fragment
        android:id="@+id/kanjiListFragment"
        android:name="ru.jjba.jr2.presentation.ui.vocab.kanji.list.KanjiListFragment"
        android:label="KanjiListFragment">
        <action
            android:id="@+id/action_kanjiList_to_kanjiDetail"
            app:destination="@id/kanjiDetailFragment" />
    </fragment>
    <navigation android:id="@+id/navGraphNumberPractice"
        app:startDestination="@id/numberPracticeSettingsFragment">
        <fragment
            android:id="@+id/numberPracticeSettingsFragment"
            android:name="ru.jjba.jr2.presentation.ui.number.view.settings.NumberPracticeSettingsFragment"
            android:label="NumberPracticeSettingsFragment" >
            <action

                android:id="@+id/actionNavNumberPracticeSettingsToQuiz"
                app:destination="@id/numberPracticeQuizzFragment"
                app:enterAnim="@anim/nav_default_enter_anim" />
        </fragment>
        <fragment
            android:id="@+id/numberPracticeQuizzFragment"
            android:name="ru.jjba.jr2.presentation.ui.number.view.quiz.NumberPracticeQuizFragment"
            android:label="NumberPracticeQuizzFragment" >
            <action
                android:id="@+id/actionNavNumberPracticeQuizToResult"
                app:destination="@id/numberPracticeResultFragment" />
            <action
                android:id="@+id/actionNavNumberPracticeQuizToSettingsPop"
                app:popUpTo="@id/numberPracticeSettingsFragment" />
        </fragment>
        <fragment
            android:id="@+id/numberPracticeResultFragment"
            android:name="ru.jjba.jr2.presentation.ui.number.view.result.NumberPracticeResultFragment"
            android:label="NumberPracticeResultFragment" >
            <action
                android:id="@+id/actionNavNumberPracticeResultToSettingsPop"
                app:popUpTo="@id/numberPracticeSettingsFragment" />
        </fragment>
    </navigation>
</navigation>